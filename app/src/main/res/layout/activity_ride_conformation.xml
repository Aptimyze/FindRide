<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context=".RideConformationActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40sp"
            android:text="@string/ride_details"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="Ride Details" />

        <ImageView
            android:id="@+id/photoD"
            android:layout_width="161dp"
            android:layout_height="147dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100sp"
            app:srcCompat="@drawable/taxi" />

        <TextView
            android:id="@+id/nameD"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="350sp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto"
            android:text="Name :"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fareD"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="400sp"
            android:text="Fare :"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/phoneD"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="450sp"
            android:text="Phone No. :"
            android:textSize="22sp" />

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="222dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="45dp"
            android:background="@drawable/roundedbutton"
            android:text="Accept"
            android:textAllCaps="?android:attr/windowOverscan"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="22sp"
            tools:text="Accept" />


    </android.support.v7.widget.CardView>
</RelativeLayout>